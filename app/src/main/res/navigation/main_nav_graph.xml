    android:id="@+id/main_nav_graph"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/home"
        android:tag = "Home"
        android:name="com.gmachine.bottomnavigationlagssample.HomeFragment"
        tools:layout="@layout/fragment_home">
